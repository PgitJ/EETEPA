while True:
    
    # adicione o codigo a ser rodado primeiro(dar tab)

    reiniciar = input("Digite 'continuar' para reiniciar o programa ou 'sair' para encerrar: ")
    if reiniciar.lower() == "continuar": # altere pra mudar a palavra para reiniciar
        print("Reiniciando o programa...")
    elif reiniciar.lower() == "sair": # altere pra mudar a palavra para sair
        print("Encerrando o programa...")
        break  # Encerra o loop e finaliza o programa
    else:
        print("Opção inválida. Digite 'continuar' para reiniciar ou 'sair' para encerrar.")
